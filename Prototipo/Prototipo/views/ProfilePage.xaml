                    <Label BackgroundColor="Transparent" TextColor="White" Text="{Binding price}"/>
                  </StackLayout>
                </StackLayout>
              </ViewCell.View>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>        
      <Grid ColumnSpacing="0" Grid.Row="3">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width=".2*"/>
          <ColumnDefinition Width=".2*"/>
