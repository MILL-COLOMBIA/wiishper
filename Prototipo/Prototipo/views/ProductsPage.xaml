  <BoxView Color="#5D5D5D" Grid.Row="0"/>
  <BoxView Color="#74C7CD" Grid.Row="1"/>
  <BoxView Color="#DEDEDE" Grid.Row="3"/>
    <cv:CarouselView Grid.Row="4" ItemsSource="{Binding Products}" x:Name="CarouselProducts">
      <cv:CarouselView.ItemTemplate>
        <DataTemplate>
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Grid.RowSpan="2" Aspect="AspectFit" Source="{Binding image}"/>
            <StackLayout Grid.Row="1" BackgroundColor="#80000000" Padding="12">
              <Label TextColor="Black" Text="{Binding name}" FontSize="16" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
            </StackLayout>
          </Grid>
        </DataTemplate>
      </cv:CarouselView.ItemTemplate>
    </cv:CarouselView>
    <BoxView Color="#DEDEDE" Grid.Row="5"/>
    <Grid Grid.Row="7">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width=".1484*"/>
        <ColumnDefinition Width=".2032*"/>
        <ColumnDefinition Width=".0396*"/>
        <ColumnDefinition Width=".1088*"/>
        <ColumnDefinition Width=".0396*"/>
        <ColumnDefinition Width=".2032*"/>
        <ColumnDefinition Width=".1484*"/>
      </Grid.ColumnDefinitions>
      <Button Grid.Column="5" Image="like.png" Clicked="OnLike"/>
      <Button Grid.Column="1" Image="dislike.png" Clicked="OnReject"/>
    </Grid>
    <BoxView Color="#DEDEDE" Grid.Row="9"/>
  <Grid ColumnSpacing="0" Grid.Row="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width=".2*"/>
        <ColumnDefinition Width=".2*"/>
        <ColumnDefinition Width=".2*"/>
        <ColumnDefinition Width=".2*"/>
        <ColumnDefinition Width=".2*"/>
